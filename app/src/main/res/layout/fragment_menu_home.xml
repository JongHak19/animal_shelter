<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuHomeFragment">

    <TextView
        android:id="@+id/homeScreen"
        android:layout_width="109dp"
        android:layout_height="22dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="입양 후기 게시글"
        android:textColor="#F59577"
        app:layout_constraintBottom_toTopOf="@+id/homeview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/homeview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:actionBarDivider"
        app:layout_constraintBottom_toTopOf="@+id/reviewlistView"
        app:layout_constraintTop_toBottomOf="@+id/homeScreen"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-69dp" />

    <ListView
        android:id="@+id/reviewlistView"
        android:layout_width="347dp"
        android:layout_height="471dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeview" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addReviewFBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginTop="400dp"
        android:backgroundTint="@color/white"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_post_add" />
</androidx.constraintlayout.widget.ConstraintLayout>